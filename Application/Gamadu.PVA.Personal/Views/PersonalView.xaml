<UserControl
  x:Class="Gamadu.PVA.Personal.Views.PersonalView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:controls="clr-namespace:Gamadu.PVA.Resources.Controls;assembly=Gamadu.PVA.Resources"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:Gamadu.PVA.Personal.Views"
  xmlns:materialdesign="http://materialdesigninxaml.net/winfx/xaml/themes"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:prism="http://prismlibrary.com/"
  d:DesignWidth="900"
  prism:ViewModelLocator.AutoWireViewModel="True"
  FontFamily="{DynamicResource MaterialDesignFont}"
  Foreground="AntiqueWhite"
  mc:Ignorable="d">

  <UserControl.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Gamadu.PVA.Resources;component/Themes/Generic.xaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </UserControl.Resources>


  <Grid>

    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="2*" />
      <ColumnDefinition Width="5" />
      <ColumnDefinition Width="*" MinWidth="400" />
    </Grid.ColumnDefinitions>

    <materialdesign:Card Background="{StaticResource MaterialDesignDarkBackground}">

      <Grid Margin="5">

        <TreeView />

      </Grid>

    </materialdesign:Card>

    <ScrollViewer
      Grid.Column="2"
      HorizontalScrollBarVisibility="Disabled"
      VerticalScrollBarVisibility="Auto">

      <materialdesign:Card Background="{StaticResource MaterialDesignDarkBackground}">

        <Grid Margin="5">

          <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="5" />
            <RowDefinition Height="auto" />
          </Grid.RowDefinitions>

          <Grid>

            <Grid.RowDefinitions>
              <RowDefinition Height="auto" />
              <RowDefinition Height="5" />
              <RowDefinition Height="auto" />
              <RowDefinition Height="5" />
              <RowDefinition Height="auto" />
              <RowDefinition Height="5" />
              <RowDefinition Height="auto" />
              <RowDefinition Height="5" />
              <RowDefinition Height="auto" />
              <RowDefinition Height="5" />
              <RowDefinition Height="auto" />
              <RowDefinition Height="5" />
              <RowDefinition Height="auto" />
              <RowDefinition Height="5" />
              <RowDefinition Height="auto" />
              <RowDefinition Height="5" />
              <RowDefinition Height="auto" />
              <RowDefinition Height="5" />
              <RowDefinition Height="auto" />
              <RowDefinition Height="5" />
              <RowDefinition Height="auto" />
              <RowDefinition Height="5" />
              <RowDefinition Height="auto" />
              <RowDefinition Height="5" />
              <RowDefinition Height="auto" />
              <RowDefinition Height="5" />
              <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <materialdesign:Card
              Grid.Column="0"
              Padding="5"
              Background="{StaticResource MaterialDesignDarkBackground}">
              <Image
                MaxWidth="225"
                MaxHeight="225"
                Source="profile_picture_blank.png" />
            </materialdesign:Card>

            <controls:IconTextBox
              Grid.Row="2"
              materialdesign:HintAssist.Hint="Number"
              Icon="Numeric1BoxMultipleOutline" />

            <controls:IconTextBox
              Grid.Row="4"
              materialdesign:HintAssist.Hint="Matchcode"
              Icon="Barcode" />

            <controls:IconComboBox
              Grid.Row="6"
              materialdesign:HintAssist.Hint="Salutation"
              Icon="GenderMaleFemale" />

            <controls:IconTextBox
              Grid.Row="8"
              materialdesign:HintAssist.Hint="Forename"
              Icon="AccountBoxOutline" />

            <controls:IconTextBox
              Grid.Row="10"
              materialdesign:HintAssist.Hint="Surname"
              Icon="AccountBox" />

            <controls:IconDatePicker
              Grid.Row="12"
              materialdesign:HintAssist.Hint="Birth Date"
              Icon="Cake"
              SelectedDate="01.02." />

            <controls:IconTextBox
              Grid.Row="14"
              materialdesign:HintAssist.Hint="Phone Number"
              Icon="Phone" />

            <Grid Grid.Row="16">

              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition />
              </Grid.ColumnDefinitions>

              <controls:IconTextBox
                Grid.Column="0"
                materialdesign:HintAssist.Hint="Street"
                Icon="RoadVariant" />

              <controls:IconTextBox
                Grid.Column="2"
                materialdesign:HintAssist.Hint="Num"
                Icon="Numeric1BoxMultipleOutline" />

            </Grid>

            <Grid Grid.Row="18">

              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition />
              </Grid.ColumnDefinitions>

              <controls:IconTextBox
                Grid.Column="0"
                materialdesign:HintAssist.Hint="City"
                Icon="City" />

              <controls:IconTextBox
                Grid.Column="2"
                materialdesign:HintAssist.Hint="Postal Code"
                Icon="Numeric1BoxMultipleOutline" />

            </Grid>

            <controls:IconTextBox
              Grid.Row="20"
              materialdesign:HintAssist.Hint="Department"
              Icon="AlphaDBoxOutline" />

            <controls:IconTextBox
              Grid.Row="22"
              materialdesign:HintAssist.Hint="Position"
              Icon="AlphaPBoxOutline" />

            <controls:IconTextBox
              Grid.Row="24"
              materialdesign:HintAssist.Hint="Contract"
              Icon="AlphaCBoxOutline" />

            <materialdesign:Card Grid.Row="26" Background="{DynamicResource MaterialDesignDarkBackground}">
              <Grid>

                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="5" />
                  <ColumnDefinition Width="auto" />
                  <ColumnDefinition Width="5" />
                  <ColumnDefinition />
                  <ColumnDefinition Width="5" />
                </Grid.ColumnDefinitions>

                <materialdesign:PackIcon
                  Grid.Column="1"
                  Width="24"
                  Height="24"
                  VerticalAlignment="Center"
                  Kind="Information" />

                <Expander
                  Grid.Column="3"
                  Background="{DynamicResource MaterialDesignDarkBackground}"
                  FontSize="16"
                  Header="Additional Information">
                  <TextBox
                    Margin="5"
                    Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
                    TextWrapping="Wrap" />
                </Expander>

              </Grid>
            </materialdesign:Card>

          </Grid>

          <Grid Grid.Row="2">

            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="5" />
              <ColumnDefinition Width="auto" />
              <ColumnDefinition Width="5" />
              <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="2" Style="{StaticResource MaterialDesignFloatingActionMiniButton}">
              <materialdesign:PackIcon
                Width="24"
                Height="24"
                Kind="ContentSave" />
            </Button>

            <Button Grid.Column="4" Style="{StaticResource MaterialDesignFloatingActionMiniButton}">
              <materialdesign:PackIcon
                Width="24"
                Height="24"
                Kind="Delete" />
            </Button>
          </Grid>

        </Grid>

      </materialdesign:Card>

    </ScrollViewer>

  </Grid>

</UserControl>
